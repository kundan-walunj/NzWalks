@model IEnumerable<NzWalksUI.Models.Dtos.RegionsDto>
@{

}

<h1 class="mt-3">Regions</h1>
<div  class="d-flex justify-content-end ">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
        </tr>
</thead>
<tbody>
        @foreach(var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Code</td>
                <td>
                    <a asp-route-id="@i.Id" asp-action="Edit" asp-controller="Regions" class="btn btn-light">Edit </a>
                </td>
            </tr>
        }
    </tbody>
</table>